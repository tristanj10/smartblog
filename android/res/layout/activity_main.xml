<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

      
    <!-- Login -->

    <EditText
        android:id="@+id/loginLField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:hint="Email" >

        <requestFocus />
    </EditText>
    
    
    
    <!-- Password -->
    
    <EditText
        android:id="@+id/passwordLField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/loginLField"
        android:layout_below="@+id/loginLField"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:hint="********"
        android:inputType="textPassword" />
    
    <!-- Bouton d'envoi -->

   

    <Button
        android:id="@+id/buttonSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/passwordLField"
        android:layout_below="@+id/passwordLField"
        android:layout_marginTop="56dp"
        android:text="Connexion"
        android:onClick="connexion"
         />
    
    <!-- CrÃ©er un nouveau compte -->
    
     <Button
        android:id="@+id/buttonRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonSend"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="109dp"
        android:text="Nouveau compte" 
        android:onClick="nouveauCompte"/>
</RelativeLayout>
